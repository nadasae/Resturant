@model Resturant.BL.Features.MenuItems.Responses.GetMenuItemResponse
@{
    ViewData["Title"] = "Menu Item Details";
}

<h2 class="text-center">@Model.Name</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body text-center">
        <img src="~/images/menu-placeholder.png" alt="@Model.Name" style="width: 200px; height: 200px; border-radius: 10px;" />
        <h4 class="mt-3">@Model.Name</h4>
        <p>A delicious dish made with fresh ingredients.</p>
        <p class="text-primary fw-bold">$@Model.Price.ToString("F2")</p>
    </div>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary me-2">Edit</a>
<a asp-action="Index" class="btn btn-outline-primary">Back to List</a>