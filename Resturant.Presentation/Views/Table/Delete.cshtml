@model Resturant.BL.Features.Tables.Responses.GetTableByIdResponse
@{
    ViewData["Title"] = "Delete Table";
}

<h3>Are you sure you want to delete this table?</h3>
<div>
    <h4>Table #@Model.Number</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Number</dt>
        <dd class="col-sm-9">@Model.Number</dd>

        <dt class="col-sm-3">Capacity</dt>
        <dd class="col-sm-9">@Model.Capacity</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>