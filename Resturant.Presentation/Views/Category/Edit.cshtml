@model Resturant.BL.Features.Categories.Requests.UpdateCategoryRequest
@{
    ViewData["Title"] = "Edit Category";
}

<h2>Edit Category</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Menu Items</label>
        @if (ViewBag.MenuItems != null)
        {
            foreach (var menuItem in ViewBag.MenuItems)
            {
                <div class="form-check">
                    <input type="checkbox"
                           name="MenuItemIds"
                           value="@menuItem.Id"
                           id="menuItem_@menuItem.Id"
                           class="form-check-input"
                    @(Model.menuItemIds != null && Model.menuItemIds.Contains(menuItem.Id) ? "checked" : "") />
                    <label for="menuItem_@menuItem.Id" class="form-check-label">@menuItem.Name</label>
                </div>
            }
        }
        else
        {
            <p>No menu items available.</p>
        }
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>