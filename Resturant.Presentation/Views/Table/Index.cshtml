@model IEnumerable<Resturant.BL.Features.Tables.Responses.GetAllTablesAvailableResponse>
@{
    ViewData["Title"] = "Available Tables";
}

<div class="container mt-4">
    <h2 class="text-primary">Available Tables</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Table</a>
    </p>
    <div class="row">
        @{
            string[] imageNames = { "flat-lay-delicious-indonesian-bakso.jpg", "table-dinner-set.jpg", "view-delicious-food-reunion-dinner-anime-style.jpg" };
            int counter = 0;
        }

        @foreach (var item in Model)
        {
            string currentImage = $"./images/{imageNames[counter % imageNames.Length]}";
            counter++;

            <div class="col-md-4 mb-4">
                <div class="card shadow-sm border-1">
                    <div class="card-body d-flex align-items-center">

                        <img src="@currentImage"
                             class="rounded me-3"
                             style="width: 70px; height: 70px; object-fit: cover;"
                             alt="Table Icon" />

                        <div>
                            <h5 class="card-title text-primary mb-2">Table #@item.Number</h5>
                            <p class="card-text mb-2">Capacity: @item.Capacity</p>
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm mb-1">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm mb-1">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mb-1">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>